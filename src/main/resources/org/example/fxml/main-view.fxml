<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.MainController">

    <top>
        <VBox spacing="0">
            <BorderPane fx:id="windowHeader"
                        styleClass="window-header"
                        onMousePressed="#onHeaderPressed"
                        onMouseDragged="#onHeaderDragged">
                <left>
                    <ImageView fitHeight="75" preserveRatio="true">
                        <BorderPane.margin>
                           
                        </BorderPane.margin>
                        <image>
                            <Image url="@/org/example/images/logo/logot4.png"/>
                        </image>
                    </ImageView>
                </left>                <center>
                    <HBox alignment="CENTER" spacing="4">
                        <padding>
                            <Insets top="6" right="0" bottom="6" left="0"/>
                        </padding>

                        <Button fx:id="themeToggleButton"
                                styleClass="window-control header-icon-button"
                                onAction="#onThemeToggle"
                                text="">
                            <graphic>
                                <StackPane prefWidth="16" prefHeight="16">
                                    <Group fx:id="moonIcon">
                                        <SVGPath content="M10 2 A6 6 0 1 0 14 14 A8 8 0 1 1 10 2"
                                                 styleClass="window-icon"/>
                                    </Group>
                                    <Group fx:id="sunIcon" visible="false" translateX="-2">
                                        <SVGPath content="M8 3.5 A4.5 4.5 0 1 1 8 12.5 A4.5 4.5 0 0 1 8 3.5"
                                                 styleClass="sun-core"/>
                                        <SVGPath content="M8 0.5 L8 2.5 M8 13.5 L8 15.5 M0.5 8 L2.5 8 M13.5 8 L15.5 8 M2.3 2.3 L3.7 3.7 M12.3 12.3 L13.7 13.7 M2.3 13.7 L3.7 12.3 M12.3 3.7 L13.7 2.3"
                                                 styleClass="sun-ray"/>
                                    </Group>
                                </StackPane>
                            </graphic>
                        </Button>

                        <TextField fx:id="searchField"
                                   styleClass="header-search-field"
                                   promptText="Search champions..."
                                   prefWidth="320"
                                   maxWidth="320"/>

                        <Button fx:id="refreshButton"
                                styleClass="window-control header-icon-button"
                                onAction="#onRefresh">
                            <graphic>
                                <Group>
                                    <SVGPath content="M8 1 A7 7 0 1 1 1 8"
                                             styleClass="window-icon"/>
                                    <SVGPath content="M1 8 L1 5 L3 5"
                                             styleClass="window-icon"/>
                                </Group>
                            </graphic>
                        </Button>
                    </HBox>
                </center>

                <right>
                    <HBox spacing="8" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="8" right="8" bottom="4" left="4"/>
                        </padding>

                        <Button fx:id="minimizeButton"
                                onAction="#onMinimize"
                                styleClass="window-control text-button window-minimize">
                            <graphic>
                                <SVGPath content="M2 7 H14" styleClass="window-icon"/>
                            </graphic>
                        </Button>
                        <Button fx:id="maximizeButton"
                                onAction="#onMaximize"
                                styleClass="window-control text-button window-maximize">
                            <graphic>
                                <SVGPath content="M3 3 H13 V13 H3 Z" styleClass="window-icon"/>
                            </graphic>
                        </Button>
                        <Button fx:id="closeButton"
                                onAction="#onClose"
                                styleClass="window-control text-button window-close">
                            <graphic>
                                <SVGPath content="M3 3 L13 13 M3 13 L13 3" styleClass="window-icon"/>
                            </graphic>
                        </Button>
                    </HBox>
                </right>
            </BorderPane>

        </VBox>
    </top>

    <center>
        <VBox styleClass="content-area" spacing="0">
            <HBox styleClass="tab-bar" alignment="CENTER_LEFT" spacing="4">

                <Label fx:id="gameTab"
                       text="Game"
                       focusTraversable="true"
                       onMouseClicked="#onGameTabClicked"
                       onKeyPressed="#onGameTabKey"
                       styleClass="tab-chip"/>
                <Label fx:id="championsTab"
                       text="Champions"
                       focusTraversable="true"
                       onMouseClicked="#onChampionsTabClicked"
                       onKeyPressed="#onChampionsTabKey"
                       styleClass="tab-chip"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label fx:id="helpTab"
                       text="Help"
                       focusTraversable="true"
                       onMouseClicked="#onHelpTabClicked"
                       onKeyPressed="#onHelpTabKey"
                       styleClass="tab-chip"/>
            </HBox>
            <StackPane fx:id="contentArea" styleClass="view-container" VBox.vgrow="ALWAYS">
                <Label text="Select a view above."
                       style="-fx-font-size: 18; -fx-text-fill: #cccccc;"/>
            </StackPane>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer" spacing="12">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label fx:id="footerLastUpdatedLabel" text="Last updated: --" styleClass="footer-text"/>
            <Label text="|" styleClass="footer-text"/>
            <Label fx:id="patchLabel" text="Patch: --" styleClass="footer-text"/>
            <Label fx:id="updateAvailableLabel" text="Update Available!" styleClass="footer-text" visible="false" managed="false"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="League Status:" styleClass="footer-text"/>
            <Label fx:id="lcuStatusLabel" text="Unknown" styleClass="footer-text"/>
            <StackPane>
                <padding>
                    <Insets left="4" right="4"/>
                </padding>
                <Circle fx:id="lcuStatusIndicator" radius="6" styleClass="lcu-status-indicator-unknown"/>
            </StackPane>
        </HBox>
    </bottom>

</BorderPane>