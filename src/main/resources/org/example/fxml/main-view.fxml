<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.MainController">

    <top>
        <VBox spacing="10" styleClass="topbar">
            <padding>
                <Insets top="10" right="20" bottom="12" left="20"/>
            </padding>

            <!-- Row 1: Search centered, actions to the right -->
            <StackPane>
                <TextField fx:id="searchField"
                           promptText="Search champions..."
                           prefWidth="320"
                           maxWidth="320"
                           StackPane.alignment="CENTER"/>

                <HBox spacing="10" alignment="CENTER_RIGHT" StackPane.alignment="CENTER_RIGHT">
                    <Button fx:id="themeToggleButton"
                            text="Dark"
                            onAction="#onThemeToggle"/>
                    <Button fx:id="refreshButton"
                            text="Refresh"
                            onAction="#onRefresh"/>
                </HBox>
            </StackPane>

            <!-- Row 2: Navigation sits just below the search bar -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="gameButton" text="Game" prefWidth="110" onAction="#onGameNav"/>
                <Button fx:id="championsButton" text="Champions" prefWidth="110" onAction="#onChampionsNav"/>
            </HBox>
        </VBox>
    </top>

    <!-- ========== MAIN CONTENT ========== -->
    <center>
        <StackPane fx:id="contentArea">
            <Label text="Select a view above."
                   style="-fx-font-size: 18; -fx-text-fill: #cccccc;"/>
        </StackPane>
    </center>

    <!-- ========== FOOTER ========== -->
    <bottom>
        <HBox alignment="CENTER_LEFT" styleClass="footer">
            <padding>
                <Insets top="10" right="12" bottom="10" left="12"/>
            </padding>
            <Label text="About" style="-fx-text-fill: #888888;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="v1.0.0" style="-fx-text-fill: #888888;"/>
        </HBox>
    </bottom>

</BorderPane>