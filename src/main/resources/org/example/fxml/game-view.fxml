<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.GameController"
            prefWidth="1200" prefHeight="800">

    <left>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="10" bottom="20" left="20"/>
            </padding>

            <Label text="Your Team" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <HBox spacing="5">
                <ImageView fx:id="allyBan1" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="allyBan2" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="allyBan3" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="allyBan4" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="allyBan5" fitWidth="40" fitHeight="40"/>
            </HBox>

            <VBox spacing="10">
                <ImageView fx:id="allyPick1" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="allyPick2" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="allyPick3" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="allyPick4" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="allyPick5" fitWidth="80" fitHeight="80"/>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER: MAP + RECOMMENDED PICKS BELOW -->
    <center>
        <VBox spacing="16">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <StackPane>
                <ImageView fx:id="mapView" fitWidth="550" preserveRatio="true"/>
            </StackPane>

            <VBox spacing="10">
                <Label text="Recommended Picks"
                       style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                <ListView fx:id="recommendedList" prefHeight="220" prefWidth="320"/>
            </VBox>
        </VBox>
    </center>

    <!-- RIGHT: ENEMY TEAM -->
    <right>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Enemy Team" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <!-- Enemy bans -->
            <HBox spacing="5" alignment="CENTER_RIGHT">
                <ImageView fx:id="enemyBan1" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="enemyBan2" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="enemyBan3" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="enemyBan4" fitWidth="40" fitHeight="40"/>
                <ImageView fx:id="enemyBan5" fitWidth="40" fitHeight="40"/>
            </HBox>

            <!-- Enemy picks -->
            <VBox spacing="10" alignment="TOP_RIGHT">
                <ImageView fx:id="enemyPick1" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="enemyPick2" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="enemyPick3" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="enemyPick4" fitWidth="80" fitHeight="80"/>
                <ImageView fx:id="enemyPick5" fitWidth="80" fitHeight="80"/>
            </VBox>
        </VBox>
    </right>

</BorderPane>
